<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ViewRecordActivity">

    <TextView
        android:id="@+id/viewRecordActivityTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/ViewRecordActivity_activity_title"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/viewRecordActivitySettings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/viewRecordActivitySettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_settings_black_24dp" />

    <ImageView
        android:id="@+id/viewRecordActivityImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/viewRecordActivityComment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewRecordActivityTitle"
        app:srcCompat="@mipmap/ic_launcher_foreground" />

    <TextView
        android:id="@+id/viewRecordActivityComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/viewRecordActivityTimestamp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/viewRecordActivityCommentTitle"
        app:layout_constraintTop_toBottomOf="@+id/viewRecordActivityImage" />

    <TextView
        android:id="@+id/viewRecordActivityTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/viewRecordActivityViewBodyLocation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/viewRecordActivityTimestampTitle"
        app:layout_constraintTop_toBottomOf="@+id/viewRecordActivityComment" />

    <Button
        android:id="@+id/viewRecordActivityViewBodyLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ViewRecordActivity_view_photos"
        app:layout_constraintBottom_toTopOf="@+id/viewRecordActivityViewPhotos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewRecordActivityTimestamp" />

    <Button
        android:id="@+id/viewRecordActivityViewPhotos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="@string/ViewRecordActivity_view_geolocation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewRecordActivityViewBodyLocation" />

    <TextView
        android:id="@+id/viewRecordActivityCommentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ViewRecordActivity_comment_title"
        app:layout_constraintBaseline_toBaselineOf="@+id/viewRecordActivityComment"
        app:layout_constraintEnd_toStartOf="@+id/viewRecordActivityComment"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/viewRecordActivityTimestampTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ViewRecordActivity_timestamp_title"
        app:layout_constraintBaseline_toBaselineOf="@+id/viewRecordActivityTimestamp"
        app:layout_constraintEnd_toStartOf="@+id/viewRecordActivityTimestamp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>