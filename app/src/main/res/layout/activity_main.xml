<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <Button
        android:id="@+id/mainActivityPatientLogin"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/patient_login"
        app:layout_constraintBottom_toTopOf="@+id/mainActivityDoctorLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainActivityUsernameText" />

    <Button
        android:id="@+id/mainActivityDoctorLogin"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/doctor_login"
        app:layout_constraintBottom_toTopOf="@+id/mainActivityCreateUser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainActivityPatientLogin" />

    <Button
        android:id="@+id/mainActivityCreateUser"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginBottom="32dp"
        android:text="@string/create_user"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainActivityDoctorLogin" />

    <EditText
        android:id="@+id/mainActivityUsernameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/enter_username"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/mainActivityPatientLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainActivityImage" />

    <ImageView
        android:id="@+id/mainActivityImage"
        android:layout_width="150dp"
        android:layout_height="141dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toTopOf="@+id/mainActivityUsernameText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_foreground" />
</android.support.constraint.ConstraintLayout>